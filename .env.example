# Environment Configuration
NODE_ENV=development

# Database Configuration
POSTGRES_URL=postgres://filecoin_user:filecoin_pass@postgres:5432/filecoin_backup
REDIS_URL=redis://redis:6379

# Service URLs
GATEWAY_PORT=8080
ENGINE_PORT=9090
BLOCKCHAIN_PORT=3001
FRONTEND_PORT=3000
AI_OPTIMIZER_PORT=8000

# Filecoin Configuration
FILECOIN_NODE_URL=https://api.calibration.node.glif.io/rpc/v1
WALLET_PRIVATE_KEY=your_wallet_private_key_here
FILECOIN_NETWORK=calibration

# IPFS Configuration
IPFS_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_infura_project_id_here
IPFS_PROJECT_SECRET=your_infura_project_secret_here

# Authentication
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
API_KEY=your_api_key_here

# Storage Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./data/uploads
LOG_PATH=./data/logs

# Backup Configuration
COMPRESSION_LEVEL=6
ENCRYPTION_KEY=your_32_character_encryption_key_12
WALLET_ENCRYPTION_KEY=your_wallet_encryption_key_32_chars
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Optimizer Configuration
AI_OPTIMIZER_URL=http://ai-optimizer:8000
ENABLE_AI_OPTIMIZATION=true
ML_MODEL_PATH=./data/ai-models
TRAINING_DATA_PATH=./data/training

# External APIs
FILREP_API_URL=https://api.filrep.io
SPACEGAP_API_URL=https://spacegap.github.io/api
FILSCAN_API_URL=https://api.filscan.io

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
