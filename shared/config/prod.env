# Production Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database Settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=filecoin_backup
POSTGRES_USER=backup_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Service Ports
GATEWAY_PORT=8080
ENGINE_PORT=9090
BLOCKCHAIN_PORT=3001
FRONTEND_PORT=3000

# Filecoin Settings (Production)
FILECOIN_NODE_URL=${FILECOIN_NODE_URL}
FILECOIN_NETWORK=mainnet
WALLET_PRIVATE_KEY=${WALLET_PRIVATE_KEY}

# IPFS Settings (Production)
IPFS_URL=${IPFS_URL}
IPFS_PROJECT_ID=${IPFS_PROJECT_ID}
IPFS_PROJECT_SECRET=${IPFS_PROJECT_SECRET}

# Security Settings (Production - Use strong keys)
JWT_SECRET=${JWT_SECRET}
API_KEY=${API_KEY}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Storage Settings
UPLOAD_PATH=/app/data/uploads
LOG_PATH=/app/data/logs
MAX_FILE_SIZE=1GB

# Production Features
ENABLE_DEBUG_LOGS=false
ENABLE_MOCK_SERVICES=false
DISABLE_AUTH=false

# Performance Settings
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30s

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100
HEALTH_CHECK_INTERVAL=30s

# Backup Settings
DEFAULT_RETENTION_DAYS=365
MAX_BACKUP_SIZE=100GB
BACKUP_COMPRESSION_LEVEL=6
